# App
APP_NAME=TaskIngestService
LOG_LEVEL=INFO
TIMEZONE=Asia/Shanghai
DATA_SOURCES_FILE=./config/sources.yaml
SCHEDULE_INTERVAL_SECONDS=600
SCHEDULER_ENABLED=true
REQUEST_TIMEOUT_SECONDS=20
USER_AGENT=TaskIngestBot/1.0 (+https://example.com)

# Redis
REDIS_URL=redis://redis:6379/0
DUP_TTL_DAYS=14

# Database
POSTGRES_DSN=postgresql+psycopg://taskuser:taskpass@postgres:5432/taskdb

# Task Management API
TASK_API_BASE_URL=https://your-task-system.example.com/api
TASK_API_TOKEN=replace_with_api_token
TASK_API_TIMEOUT_SECONDS=20

# AI Generation
ENABLE_AI=true
MODEL_NAME=gpt-4o-mini
MODEL_API_KEY=replace_with_model_api_key
# Optional: override provider if needed by litellm (openai, anthropic, etc.)
MODEL_PROVIDER=openai

# Validation
ENABLE_VALIDATION=true